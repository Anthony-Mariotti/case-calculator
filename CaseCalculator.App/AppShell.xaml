<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CaseCalculator.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CaseCalculator.App">

    <TabBar>
        <Tab 
            Title="Calculator"
            Icon="calculator.png">
            
            <ShellContent
                Title="Case Calculator"
                ContentTemplate="{DataTemplate local:Calculator}"
                Route="Calculator" />
        </Tab>

        <Tab
            Title="Contribute"
            Icon="chatbubble.png">

            <ShellContent
                Title="Contribute"
                ContentTemplate="{DataTemplate local:Contribute}"
                Route="Contribute" />
        </Tab>
        
        <Tab 
            Title="About"
            Icon="information.png">
            
            <ShellContent
                Title="About"
                ContentTemplate="{DataTemplate local:About}"
                Route="About" />
        </Tab>
    </TabBar>
</Shell>
