<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CaseCalculator.App.MainPage">

    <VerticalStackLayout Margin="12">

        <Label
            FontSize="Large"
            Text="Currency" />

        <Picker 
            x:Name="CurrencyPicker"
            Title="Pick Currency" />

        <Label
            FontSize="Large"
            Text="Case Selection" />

        <Picker 
            x:Name="CasePicker"
            Title="Pick a case"
            SelectedIndexChanged="CasePicker_SelectedIndexChanged" />

        <Label
            FontSize="Large"
            Text="Current Market Price" />

        <Label
            x:Name="MarketPriceLabel" />

        <Label
            FontSize="Large"
            Text="How many cases?" />

        <Label
            FontSize="Body"
            BindingContext="{x:Reference CaseAmountStepper}"
            Text="{Binding Value}"/>

        <Stepper
            x:Name="CaseAmountStepper"
            Minimum="0"
            Value="0"
            Increment="1"
            ValueChanged="CaseAmountStepper_ValueChanged"/>

        <Label
            FontSize="Large"
            Text="Estimated Cost" />

        <Label
            x:Name="EstimatedCost" />

    </VerticalStackLayout>
</ContentPage>
